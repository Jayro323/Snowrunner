<Controls:MetroWindow x:Class="SnowRunner_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnowRunner_Tool"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="SnowRunner-Tool" 
        Height="400" 
        Width="700" 
        WindowStyle="ToolWindow" 
        ResizeMode="NoResize" Icon="baseline_restore_black_18dp.ico">
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.New" 
                                           Executed="BackupCommand_Executed" 
                                           CanExecute="BackupCommand_CanExecute" 
                        >
        </CommandBinding>
        <CommandBinding Command="ApplicationCommands.Save" 
                                           CanExecute="SaveCommand_CanExecute" 
                                           Executed="SaveCommand_Executed" 
                        >
        </CommandBinding>
    </Window.CommandBindings>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="54*"/>
            <ColumnDefinition Width="89*"/>
        </Grid.ColumnDefinitions>
        <Label Content="SnowRunner path" 
                     Margin="20,18,135,0" 
                     VerticalAlignment="Top" 
                     FontStyle="Italic"
               />
        <Label x:Name="sr_p" 
                    Content="Path" 
                    Margin="130,18,20,0" 
                    VerticalAlignment="Top" Grid.ColumnSpan="2"
               />
        <Label Content="Support ID" 
            Margin="20,57,135,0" 
            VerticalAlignment="Top" 
            FontStyle="Italic"
               />
        <TextBox x:Name="txtLogID" 
            Text="Log ID" 
            Margin="130,57,220,0" 
            VerticalAlignment="Top" 
            Grid.ColumnSpan="2" 
            IsReadOnly="True"
               />
        <CheckBox x:Name="cbLogging" 
            Content="Enable logging" 
            Grid.Column="1" 
            HorizontalAlignment="Left" 
            Margin="249,60,0,0" 
            VerticalAlignment="Top"
            Click="CheckBox_Click" IsChecked="True"
            >
        </CheckBox>
        <DataGrid x:Name="dgBackups" 
                          Margin="20,112,19.667,59.667" 
                          RenderTransformOrigin="-0.429,0.15" 
                          IsReadOnly="True" 
                          SelectedItem="{Binding SelectedRow, Mode=TwoWay}" 
                          Background="LightGray" 
                          RowBackground="LightYellow" 
                          AlternatingRowBackground="LightBlue"  
                          HorizontalScrollBarVisibility="Disabled"
                          SelectionMode="Single"
                          ColumnWidth="220" Grid.ColumnSpan="2"
        >
            <DataGrid.ContextMenu>
                <ContextMenu DataContext="{Binding Path=PlacementTarget.Tag, RelativeSource={RelativeSource Self}}" >
                    <MenuItem  Header="Restore this backup" 
                                          Click="RestoreBackup_Click" 
                                          CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}">
                        <MenuItem.Icon>
                            <Image Source="Resources/baseline_restore_black_18dp.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
        <Label Content="Right click on backup item to restore it" 
                     Margin="20,0,0,248.667" 
                     Height="36" 
                     VerticalAlignment="Bottom" 
                     HorizontalAlignment="Left" 
                     Width="215"
               >
        </Label>
        <Button Content="Backup current save game" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Top" 
                       Margin="20,320,0,0"
                       Width="215"
                       RenderTransformOrigin="-0.29,0.04"
                       Command="ApplicationCommands.New"
                >
        </Button>
        <TextBox x:Name="txtAmount" 
                         HorizontalAlignment="Right" 
                         Height="23" Margin="0,320,19.667,0" 
                         TextWrapping="Wrap" 
                         Text="Amount" 
                         VerticalAlignment="Top" 
                         Width="120" Grid.Column="1"
                 >
        </TextBox>
        <Button Content="Set Money" 
                       HorizontalAlignment="Right" 
                       Margin="0,320,159.667,0" 
                       VerticalAlignment="Top" 
                       Width="75" 
                       RenderTransformOrigin="-0.29,0.04"
                       Command="ApplicationCommands.Save" Grid.Column="1"
                >
        </Button>
    </Grid>

</Controls:MetroWindow>
